@model Schoolapp1.StudentCours
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
  

        <div class="form-group">
            @Html.LabelFor(model => model.StudentsID, "StudentsID", htmlAttributes: new { @class = "control-label cod-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StudentsID", string.Empty)
                @Html.ValidationMessageFor(model => model.StudentsID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CoursesID, "CoursesID", htmlAttributes: new { @class = "control-label cod-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CoursesID", string.Empty)
                @Html.ValidationMessageFor(model => model.CoursesID)
            </div>
        </div>

        @Html.HiddenFor(model => model.StudentsID)
        @Html.HiddenFor(model => model.CoursesID)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back To List", "Index")
</div>